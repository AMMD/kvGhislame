<AudioStrip>:
    gainfader: gainfader
    panfader: panfader
    mute: mute
#    name_s: name_s

    canvas:
        Color: 
            rgb: root.color

    # Label:
    #     id: name_s
    #     font_size: 10
    #     color: root.r, root.g, root.b, 1
    #     text: root.name

    #     height: self.texture_size[1]
    #     width: root.width - 8

    #     x: root.x + 4
    #     y: root.y + 4

    #     shorten: 'true'
    #     text_size: self.width, 18

    #     halign: 'center'
    #     valign: 'top'

    #     canvas:
    #         Color:
    #             rgba: root.r, root.g, root.b, 0.3
    #         Line:
    #             rectangle: self.x, self.y, self.width, self.height
            
    Toggle:
        id: mute
        center_x: root.center_x
        y: root.y + 5
        size: 34, 34
        main_color: root.r, root.g, root.b
        name: 'M'

    ValueFader:
        id: gainfader
        orientation: 'vertical'
        x: root.x + 4
        y: root.y + root.mute.height + 10
        height: root.height - root.mute.height - root.panfader.height - 25
        width: root.width - 8
        name: root.name
        color: root.color
        max: 100
        min: 0

    ValueFader:
        id: panfader
        orientation: 'horizontal'
        x: root.x + 4
        height: 60
        y: root.height - self.height - 10
        width: root.width - 8
        name: root.name
        min: -1
        max: 1
#        step: 0.01
        color: root.color






