#:kivy 1.4

<Mute>:
    text: 'M'
    height: 35
    width: 35

<AudioStrip>:
    gainfader: gainfader
    panfader: panfader
    mute: mute
    name_s: name_s

    canvas:
        Color: 
            hsv: 1, 0.5, 0.5
        Line:
            rectangle: self.x+1, self.y+1, self.width-2, self.height-2

    Label:
        id: name_s
        font_size: 10
        color: 1, 1, 1, 1
        text: root.name

        height: self.texture_size[1]
        width: root.width - 8
        padding: 5, 3

        x: root.x + 4
        y: root.y + 4

        shorten: 'true'
        text_size: self.width, 18

        halign: 'center'
        valign: 'top'

        canvas:
            Color:
                rgb: 0.2, 0.2, 0.2
            Line:
                rectangle: self.x, self.y, self.width, self.height
            
    Mute:
        id: mute
        center_x: root.center_x
        y: root.y + 25

    ValueFader:
        id: gainfader
        x: root.x + 4
        y: root.y + root.mute.height + 35
        height: root.height - root.mute.height - root.panfader.height - 25
        width: root.width - 8
        name: root.name

    ValuePanner:
        id: panfader
        x: root.x + 4
        height: 60
        y: root.height - self.height - 10
        width: root.width - 8
        name: ''
        p_max: 1
        p_min: -1
        p_step: 0.01






