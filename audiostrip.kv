#:kivy 1.4

<Mute>:
    text: 'M'
    height: 35
    width: 35

<AudioStrip>:
    valuefader: valuefader
    mute: mute
    name_s: name_s

    padding: 3, 3, 3, 3

    canvas:
        Color: 
            hsv: 1, 0.5, 0.5
        Line:
            rectangle: self.x+1, self.y+1, self.width-2, self.height-2

    Label:
        id: name_s
        font_size: 12
        color: 1, 1, 1, 1
        text: root.name

        height: self.texture_size[1]
        width: root.width - 8
        padding: 5, 3

        x: root.x + 4
        y: root.y + 4

        shorten: 'true'
        text_size: self.width, 18

        halign: 'center'
        valign: 'bottom'

        canvas:
            Color:
                rgb: 0.4, 0.4, 0.4
            Line:
                rectangle: self.x, self.y, self.width, self.height
            
    Mute:
        id: mute
        center_x: root.center_x
        y: root.y + 25

    ValueFader:
        id: valuefader
        center_x: root.center_x
        y: root.y + root.mute.height + 35
        height: root.height - root.mute.height - 45
        name: root.name






