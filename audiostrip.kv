#:kivy 1.4

<AudioStrip>:
    gainfader: gainfader
    panfader: panfader
    mute: mute

    canvas:
        Color: 
            rgb: root.color

    Toggle:
        id: mute
        center_x: root.center_x
        y: root.y + 5
        size: 34, 34
        main_color: root.r, root.g, root.b
        text: 'M' if root.mute_mode == 'mute' else 'ON'
        one_on_down: False if root.mute_mode == 'mute' else True
        path: "/" + root.app_name.replace(" ", "_") + "/AudioStrip/" + root.name.replace(" ", "_") + "/On"
        control_path: self.path

    ValueFader:
        id: gainfader
        orientation: 'vertical'
        x: root.x + 4
        y: root.y + root.mute.height + 10
        height: root.height - root.mute.height - root.panfader.height - 25
        width: root.width - 8
        name: root.name
        color: root.color
        max: 100
        min: 0
        path: "/" + root.app_name.replace(" ", "_") + "/AudioStrip/" + root.name.replace(" ", "_") + "/Gain"
        control_path: self.path

    ValueFader:
        id: panfader
        orientation: 'horizontal'
        x: root.x + 4
        height: 60
        y: root.height - self.height - 10
        width: root.width - 8
        name: root.name
        min: -1
        max: 1
        color: root.color
        path: "/" + root.app_name.replace(" ", "_") + "/AudioStrip/" + root.name.replace(" ", "_") + "/Pan"
        control_path: self.path






