#:kivy 1.4

<Pad>:
    canvas:
        Color:
            rgba: 1, 1, 1, 0.5
        Line:
            rectangle: self.x + self.pad_x + self.padding, self.y + self.pad_y + self.padding, self.pad_width - 2 * self.padding, self.pad_height - 2 * self.padding

        Color:
            rgba: self.r, self.g, self.b, 0.3
        Line:
            rectangle: self.value_pos[0], self.y + self.pad_y + self.padding, 0, self.pad_height - 2 * self.padding - 2
        Line:
            rectangle: self.x + self.pad_x + self.padding, self.value_pos[1], self.pad_width - 2 * self.padding - 2, 0
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.value_pos[0] - self.padding - 2, self.value_pos[1] - self.padding - 1
            size: 32, 32
            source:  'atlas://data/images/defaulttheme/slider_cursor'
        Color:
            rgba: self.r, self.g, self.b, 0.3
        Ellipse:
            size: 28, 28
            pos: root.value_pos[0] - self.padding, root.value_pos[1] - self.padding + 1


    Label:
        font_size: 10
        color: root.r, root.g, root.b, 1
        text: str(round(root.value[0], 2)) + ", " + str(round(root.value[1], 2))
        size: self.texture_size
        x: root.value_pos[0] + root.padding if root.value_pos[0] < (root.pad_width / 2 + root.padding + root.pad_x) else root.value_pos[0] - root.padding - self.width 
        y: root.value_pos[1] + root.padding if root.value_pos[1] < (root.pad_height / 2 + root.padding + root.pad_y) else root.value_pos[1] - root.padding - self.height
