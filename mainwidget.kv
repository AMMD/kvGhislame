#:kivy 1.4

<MainWidget>:
    mystrip1: mystrip1
    mystrip2: mystrip2
    mystrip3: mystrip3
    mystrip4: mystrip4
    mylightstrip1: mylightstrip1
    mylightstrip2: mylightstrip2

    AudioStrip:
        id: mystrip1
        name: 'My Strip 1'
        x: root.x
        y: root.y
        width: root.stripwidth
        height: root.height
        color: 0.5, 0.5, 1

    AudioStrip:
        id: mystrip2
        name: 'My Strip 2'
        x: root.x + self.width
        y: root.y
        width: root.stripwidth
        height: root.height
        color: 1, 0.5, 0.5

    AudioStrip:
        id: mystrip3
        name: 'My Strip 3'
        x: root.x + self.width * 2
        y: root.y
        width: root.stripwidth
        height: root.height
        color: 0.5, 1, 1

    AudioStrip:
        id: mystrip4
        name: 'My Strip 4'
        x: root.x + self.width * 3
        y: root.y
        width: root.stripwidth
        height: root.height
        color: 1, 0.5, 1

    LightStrip:
        id: mylightstrip1
        name: 'My Light 1'
        x: root.x + root.stripwidth * 4 + 10
        y: root.y
        height: root.height
        width: 100
#        width: root.height
        color: 0.5, 0.5, 1

    LightStrip:
        id: mylightstrip2
        name: 'My Light 2'
        x: root.x + root.stripwidth * 4 + 10 + 200
        y: root.y
        height: root.height
        width: 100
#        width: root.height
        color: 1, 0.5, 1




    OscSendingService:
        center_x: root.width - 3
        center_y: root.height - 3


