#!kivy 1.5

<MxDrums>:
    mxkicks: mxkicks
    mxsnares: mxsnares
    mxcymbs: mxcymbs
    mxcont: mxcont

    mxdrums: mxdrums

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 1)
        pos_hint: {'x': 0, 'y': 0}
        spacing: 5

        AudioStrip:
            id: mxkicks
            name: "MxKicks"
            color: 1, 0.5, 0.1

        AudioStrip:
            id: mxsnares
            name: "MxSnares"
            color: 1, 0.5, 0.15

        AudioStrip:
            id: mxcymbs
            name: "MxCymbs"
            color: 1, 0.5, 0.2

        AudioStrip:
            id: mxcont
            name: "MxContinua"
            color: 1, 0.5, 0.25
            size_hint: (1, 1)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            spacing: 5
            MenuButton:
                size_hint: 1, None
                height: 50
                group: 'tabs'
                text: 'Main Mix'
                main_color: 1, 1, 1
            AudioStrip:
                id: mxdrums
                name: "MxDrums"
                color: 1, 0.5, 0
                size_hint: (1, 1)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.1, 0.1, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: 0.7, 0.7, 0.7, 0.5
                    Line:
                        rectangle: self.x, self.y, self.width - 1, self.height - 1
