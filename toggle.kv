#!kivy 1.5

<Toggle>:
    text: self.name
    background_color: self.r, self.g, self.b, 1 #(0, 0, 0, 1) if self.state == 'normal' else (self.r, self.g, self.b, 1)
    color: (self.r, self.g, self.b, 1) if self.state == 'normal' else (1, 1, 1, 1)

    background_normal: 'data/button_normal.png'
    background_down: 'data/button_down.png'
    border: 15, 15, 15, 15
#    border: 100, 100, 100, 100


    path: "/" + self.app_name + "/Toggle/" + self.name
    control_path: self.path

    args: [0] if self.state == 'normal' else [1]
    args_pattern: 'i'

    on_press:
        self.send_message()

