#!kivy 1.5

<Toggle>:
    text: self.name + " " + self.state
    background_color: self.r, self.g, self.b, 1

    path: "/" + self.app_name + "/Toggle/" + self.name
    control_path: self.path

    args: [0] if self.state == 'normal' else [1]
    args_pattern: 'i'

    on_press:
        self.send_message()

