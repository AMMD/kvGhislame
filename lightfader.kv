#!kivy 1.5

<LightFader>:
    flash: flash

    subpad: 40

    path: "/" + app.get_application_name().replace(" ", "_") + "/LightFader"
    control_path: self.path

    max: 1
    min: 0
    step: 0.001

    Push:
        id: flash
        size_hint: None, None
        size: 34, 34
        main_color: root.color
        text: 'flash'
        center_x: root.center_x
        on_press:
            root.old_value = root.value
            root.value = root.max
            root.send_message()
        on_release:
            root.value = root.old_value
            root.send_message()
