#!kivy 1.5

<Envelop>:
    orientation: 'vertical'
    BoxLayout:
        size_hint: 1, 1
        orientation: 'horizontal'
        XyPad:
            size_hint: 1, 1
            x_name: 'Attack'
            y_name: 'Decay'
            color: root.color
        XyPad:
            size_hint: 1, 1
            x_name: 'Sustain'
            y_name: 'Release'
            color: root.color
        XyPad:
            size_hint: 1, 1
            x_name: 'Hold'
            y_name: 'Delay'
            color: root.color
    ValueFader:
        orientation: 'horizontal'
        size_hint: 1, None
        height: 60
        color: root.color

