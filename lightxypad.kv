#:kivy 1.4

<LightXyPad>:
    hue: hue_w.value
    hue_w: hue_w

    x_name: 'saturation'
    y_name: 'value'

    max: 1, 1
    min: 0, 0

    x_limit: 0
    y_limit: 80


    canvas.before:
    	Color:
    	    hsv: self.hue if isinstance(self.hue, float) else 0, 1, 1
        Rectangle:
            pos: self.subpad[0] + self.padding + 1, self.subpad[1] + self.padding + 1
            size: self.width - self.subpad[0] - 2 * self.padding - 3, self.height - self.subpad[1] - 2 * self.padding - 3


    	Color:
            rgb: 1, 1, 1
            a: 1
        # Rectangle:
        #     pos: self.x, 18
        #     size: self.width, 59
    	Rectangle:
    	    pos: self.x + 9, 20
    	    size: self.width - 19, 55
            source: './data/teinte.png'
        Rectangle:
            pos: self.subpad[0] + self.padding + 1, self.subpad[1] + self.padding + 1
            size: self.width - self.subpad[0] - 2 * self.padding - 3, self.height - self.subpad[1] - 2 * self.padding - 3
            source: './data/chroma.png'

    ValueFader:
        id: hue_w
        name: 'hue'
        color: (1, 1, 1)
        width: root.width
        height: 50
        x: root.x
        y: 20
        min: 0
        max: 1
        step: 0.01
