#:kivy 1.4

<LightXyPad>:
    hue: hue_w.value
    hue_w: hue_w

    value_type: 'alternate'
    alt_value: self.hsv if self.mode == 'hsv' else self.rgb

    args_pattern: "fff"

    path: "/" + self.app_name.replace(" ", "_") + "/LightXYpad/" +  self.name.replace(" ", "_") + "/" + str(self.mode)
    control_path: self.path

    x_name: 'saturation'
    y_name: 'value'

    max: 1, 1
    min: 0, 0
    step: 0.001, 0.001

    x_limit: root.x + root.hfader_x # self.x
    y_limit: root.y + root.hfader_y + root.hfader_height + 20 # self.y + 80

    pad_pos: 60, 160
#    subpad: 60, 160
#    x_name_pad: 120
#    y_name_pad: 0
#    faders_subpad: 80, 0

    hfader_pos: root.x + root.yfader_x, root.y + root.name_pad_y - root.hfader_height - 30
    hfader_size: root.width - root.yfader_x, 50

    canvas.before:
    	Color:
    	    hsv: self.hue if isinstance(self.hue, float) else 0, 1, 1
        Rectangle:
            pos: root.x + root.pad_x + 1 + root.padding, root.y + root.pad_y + 1 + root.padding  #self.x + self.subpad[0] + self.padding + 1 if self.x_sp_align == 'left' else self.x + self.padding, self.y + self.subpad[1] + self.padding + 1 if self.y_sp_align == 'bottom' else self.y + self.padding
            size: root.pad_width - 2 - 2 * root.padding, root.pad_height - 2 - 2 * root.padding # self.width - self.subpad[0] - 2 * self.padding - 3, self.height - self.subpad[1] - 2 * self.padding - 3


    	Color:
            rgb: 1, 1, 1
            a: 1
    	Rectangle:
    	    pos: root.hfader_x + 10, root.hfader_y
    	    size: root.hfader_width - 21, root.hfader_height + 5
            source: './data/teinte.png'
        Rectangle:
            pos: root.x + root.pad_x +1 + root.padding, root.y + root.pad_y + 1 + root.padding #self.x + self.subpad[0] + self.padding + 1, self.y + self.subpad[1] + self.padding + 1
            size: root.pad_width - 2 - 2 * root.padding, root.pad_height - 2 - 2 * root.padding #self.width - self.subpad[0] - 2 * self.padding - 3, self.height - self.subpad[1] - 2 * self.padding - 3
            source: './data/chroma.png'

    ValueFader:
        id: hue_w
        name: 'hue'
        color: (1, 1, 1)
        pos: root.hfader_pos
        size: root.hfader_size
        min: 0
        max: 1
        step: root.step[0]
