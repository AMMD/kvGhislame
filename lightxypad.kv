#:kivy 1.4

<LightXyPad>:
    hue_w: hue_w

    x_name: 'saturation'
    y_name: 'value'

    max: 1, 1
    min: 0, 0

#    on_touch_move:
#        self.change_bg()

    canvas:
    	Color:
    	    hsv: self.hsv
    	Rectangle:
    	    pos: self.x, 20
    	    size: self.width, 60

    ValueFader:
        id: hue_w
        name: 'hue'
        color: root.color
        width: root.width
        height: 50
        x: root.x
        y: 20
        min: 0
        max: 1
        step: 0.01