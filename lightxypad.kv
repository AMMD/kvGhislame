#:kivy 1.4

<LightXyPad>:
    hue: hue_w.value
    hue_w: hue_w

    value_type: 'alternate'
    alt_value: self.hsv if self.mode == 'hsv' else self.rgb

    args_pattern: "fff"

    path: "/" + self.app_name.replace(" ", "_") + "/LightXYpad/" +  self.name.replace(" ", "_") + "/" + str(self.mode)
    control_path: self.path

    x_name: 'saturation'
    y_name: 'value'

    max: 1, 1
    min: 0, 0
    step: 0.001, 0.001

    x_limit: self.x
    y_limit: self.y + 80
    subpad: 60, 160
    x_name_pad: 120
    y_name_pad: 0
    faders_subpad: 80, 0

    canvas.before:
    	Color:
    	    hsv: self.hue if isinstance(self.hue, float) else 0, 1, 1
        Rectangle:
            pos: self.x + self.subpad[0] + self.padding + 1 if self.x_sp_align == 'left' else self.x + self.padding, self.y + self.subpad[1] + self.padding + 1 if self.y_sp_align == 'bottom' else self.y + self.padding
            size: self.width - self.subpad[0] - 2 * self.padding - 3, self.height - self.subpad[1] - 2 * self.padding - 3




    	Color:
            rgb: 1, 1, 1
            a: 1
    	Rectangle:
    	    pos: self.x + 10, 20
    	    size: self.width - 21, 55
            source: './data/teinte.png'
        Rectangle:
            pos: self.x + self.subpad[0] + self.padding + 1, self.y + self.subpad[1] + self.padding + 1
            size: self.width - self.subpad[0] - 2 * self.padding - 3, self.height - self.subpad[1] - 2 * self.padding - 3
            source: './data/chroma.png'

    ValueFader:
        id: hue_w
        name: 'hue' + str(root.subpad)
        color: (1, 1, 1)
        width: root.width
        height: 50
        x: root.x
        y: root.y + 20
        min: 0
        max: 1
        step: root.step[0]
