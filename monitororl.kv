#!kivy 1.5

<MonitorOrl>:
    mainmix: mainmix
    basse: basse
    guitares: guitares
    vocals: vocals
    organicdrums: organicdrums
    droiture: droiture

    osc_name: "MonitorsORL"

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 1)
        pos_hint: {'x': 0, 'y': 0}
        spacing: 5

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 35
                group: 'tabs'
                text: 'Main Mix'
                main_color: 1, 0.5, 0.1
            AudioStrip:
                id: mainmix
                name: "Main Mix"
                color: 1, 0.5, 0.1
                size_hint: (1, 1)
                osc_name: root.osc_name

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 35
                group: 'tabs'
                text: 'Basses'
                main_color: 1, 0.5, 0.15
            AudioStrip:
                id: basse
                name: "Basse"
                color: 1, 0.5, 0.15
                size_hint: (1, 1)
                osc_name: root.osc_name

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 35
                group: 'tabs'
                text: 'Guitares'
                main_color: 1, 0.5, 0.2
            AudioStrip:
                id: guitares
                name: "Guitares"
                color: 1, 0.5, 0.2
                size_hint: (1, 1)
                osc_name: root.osc_name

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 35
                group: 'tabs'
                text: 'Vocals'
                main_color: 1, 0.5, 0.25
            AudioStrip:
                id: vocals
                name: "Vocals"
                color: 1, 0.5, 0.25
                size_hint: (1, 1)
                osc_name: root.osc_name

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 35
                group: 'tabs'
                text: 'Organic Drums'
                main_color: 1, 0.5, 0.25
            AudioStrip:
                id: organicdrums
                name: "OrganicDrums"
                color: 1, 0.5, 0.25
                size_hint: (1, 1)
                osc_name: root.osc_name

        AudioStrip:
            id: droiture
            name: "Droiture"
            color: 1, 0.5, 0.25
            size_hint: (1, 1)
            osc_name: root.osc_name


