#:kivy 1.4

<XyPad>:
    x_name_w: x_name_w
    y_name_w: y_name_w
    y_name_s: y_name_s
    name_w: name_w



    path: "/" + self.app_name.replace(" ", "_") + "/XYpad/" + self.name.replace(" ", "_") + "/" + self.x_name.replace(" ", "_") + "_" + self.y_name.replace(" ", "_")
    control_path: self.path

    args_pattern: "ff"
    args: self.value if self.value_type == 'normal' else self.alt_value


    padding: 15
    pad_pos: 20, 40
    pad_size: self.width - self.pad_x, self.height - self.pad_y
#    subpad: 20, 40
#    x_sp_align: 'left'
#    y_sp_align: 'bottom'

    on_touch_move:
        self.send_message()


    x_name_pad_pos: root.x + root.pad_x, root.y + root.pad_y - x_name_w.height - 5
    x_name_pad_size: root.pad_width, x_name_w.texture_size[1]

    y_name_pad_pos: root.y + root.pad_y, root.x + root.pad_x - root.y_name_w.height - 5
    y_name_pad_size: root.pad_height, root.y_name_w.texture_size[1]

    name_pad_pos: root.x + root.pad_x - root.y_name_w.height - 5, root.x_name_pad_y - root.y_name_w.height - 5
    name_pad_size: root.pad_width + root.y_name_w.height + 5, root.y_name_w.texture_size[1]

    Label:
        id: x_name_w
        font_size: 10
        text: root.x_name
        color: 0.8, 0.8, 0.8, 1
        pos: root.x_name_pad_pos
        size: root.x_name_pad_size
#        height: self.texture_size[1]
        valign: 'top'
        halign: 'center'
#        width: root.width - root.pad_x #- root.subpad[0]
#        x: root.x + root.pad_x #+ root.subpad[0]
#        y: root.y + name_w.height + 5 + root.x_name_pad

    Scatter:
        id: y_name_s

        pos: root.x, root.y

        rotation: 90

        Label:
            id: y_name_w
#            x: root.y + root.subpad[1] + 2
#            y: self.parent.height - self.height - root.y_name_pad
            pos: root.y_name_pad_x, root.y_name_pad_y + self.parent.height - self.height
            size: root.y_name_pad_size
#            width: root.height - root.subpad[1] - 4 - 15
#            height: self.texture_size[1]
            color: 0.8, 0.8, 0.8, 1
            font_size: 10
            valign: 'bottom'
            halign: 'center'
            text: root.y_name

    Label:
        id: name_w
        font_size: 15
        text: root.name
        halign: 'center'
        color: root.r, root.g, root.b, 1
#        height: self.texture_size[1]
#        width: root.width
        pos: root.name_pad_pos
        size: root.name_pad_size
#        x: root.x



