#:kivy 1.4

<InnerBox>:
    canvas:
        Color:
            rgb: root.color
        Line:
            rectangle: root.x + 2, root.y + 2, root.width - 4, root.height - 4

        Color:
            hsv: root.i_color

        Rectangle:
            pos: root.x + 4, root.y + 4 
            size: root.width - 9, root.height - 9

<XyPad>:
    innerbox: innerbox
    x_name_w: x_name_w
    y_name_w: y_name_w
    y_name_s: y_name_s
    name_w: name_w

    InnerBox:
        id: innerbox
        color: root.color
        i_color: 4, 1, 0.2
        x: root.x + y_name_w.height + 5
        y: root.y + x_name_w.height + name_w.height + 10
        width: root.width - y_name_w.height - 5
        height: root.height - x_name_w.height - name_w.height - 10

    Label:
        id: x_name_w
        font_size: 10
        text: root.x_name
        color: root.r, root.g, root.b, 1
        height: self.texture_size[1]
        width: root.innerbox.width
        center_x: root.innerbox.center_x
        y: root.y + name_w.height + 5

    Scatter:
        id: y_name_s

        y: root.innerbox.y+2
        height: root.innerbox.height - 4
        width: 100
        rotation: 90
        x: root.x

        # canvas:
        #     Color:
        #         rgb: 1, 0, 1
        #     Line:
        #         rectangle: 0, self.width, self.height, self.width
        #     Rectangle:
        #         pos: self.parent.pos
        #         size: self.parent.size

        Label:
            id: y_name_w
            font_size: 10
            text: root.y_name
            color: root.r, root.g, root.b, 1
            width: self.parent.height
            height: self.texture_size[1]
            y: self.parent.width - self.height
            valign: 'top'
            halign: 'center'



    Label:
        id: name_w
        font_size: 15
        text: root.name
        halign: 'center'
        color: root.r, root.g, root.b, 1
        height: self.texture_size[1]
        width: root.width
        x: root.x

