#:kivy 1.4

<XyPad>:
    x_name_w: x_name_w
    y_name_w: y_name_w
    y_name_s: y_name_s
    name_w: name_w



    path: "/" + self.app_name.replace(" ", "_") + "/XYpad/" + self.name.replace(" ", "_") + "/" + self.x_name.replace(" ", "_") + "_" + self.y_name.replace(" ", "_")
    control_path: self.path

    args_pattern: "ff"
    args: self.value


    padding: 15
    x_sp_align: 'left'
    y_sp_align: 'bottom'

    on_touch_move:
        self.send_message()


    Label:
        id: x_name_w
        font_size: 10
        text: root.x_name
        color: 0.8, 0.8, 0.8, 1
        height: self.texture_size[1]
        valign: 'top'
        halign: 'center'
        width: root.width - root.subpad[0]
        x: root.subpad[0]
        y: root.y + name_w.height + 5 + root.x_name_pad

    Scatter:
        id: y_name_s

        rotation: 90

        canvas:
            Color:
                rgba: 1, .1, .1, 1

                Rectangle:
                    pos: 0, 0
                    size: self.size

        Label:
            id: y_name_w
            x: root.y + root.subpad[1] + 2
            y: self.parent.height - self.height - root.y_name_pad
            width: root.height - root.subpad[1] - 4 - 15
            height: self.texture_size[1]
            color: 0.8, 0.8, 0.8, 1
            font_size: 10
            valign: 'bottom'
            halign: 'center'
            text: root.y_name

    Label:
        id: name_w
        font_size: 15
        text: root.name
        halign: 'center'
        color: root.r, root.g, root.b, 1
        height: self.texture_size[1]
        width: root.width
        x: root.x



