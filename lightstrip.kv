#!kivy 1.5


<LightStrip>:
    button: button
    stencil: stencil
    lightbox: lightbox

    orientation: 'vertical'
    spacing: 5

    Button:
        id: button
        canvas:
            Clear
                Rectangle:
                    pos: self.pos
                    size: self.size
                Color:
                    rgb: root.color
                    a: 1
                Rectangle:
                    pos: self.width / 2, self.y
                    size: 10, 10
                    source:  'atlas://data/images/defaulttheme/tree_closed'
        size_hint: (None, None)
        y: self.parent.height - self.height
        size: self.width, 10

    StencilView:
        id: stencil
        size_hint: (None, 1)
        x: root.x
        width: 110
        LightBox:
            ls: self.parent.parent
            size_hint: (None, 1)
            id: lightbox
            color: root.color
            name: root.name
            size: root.parent.width, self.parent.parent.height
            y: self.parent.y
            x: self.parent.x
            args_pattern: "fff"
            path: self.ls.path # "/" + app.get_application_name().replace(" ", "_") + "/LightXYpad/" +  self.parent.name.replace(" ", "_") + "/" + str(self.mode)
            control_path: root.control_path if root.control_path else self.path








        

