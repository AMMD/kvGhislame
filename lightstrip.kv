#!kivy 1.5
#: import Animation kivy.animation.Animation

<MLightBox>:
    id: lb
    rt: self.parent.parent if self.parent else 0
    pos: (self.rt.center_x, self.rt.y) if self.rt else (0, 0)
    size: (self.rt.width, self.parent.height) if self.rt else (100, 100)
    name: 'moncul'
    color: 1, 1, 0

<LightStrip>:
    lb: lb
    st: st
    vb: vb
    bub: bub

    on_parent:
        root.remove_widget(root.bub)

    StencilView:
        id: st
        x: root.center_x
        y: root.y
        height: root.height - root.vb.height - 10
        width: 200
        MLightBox:
            id: lb

    Bubble:
        id: bub
        size_hint: (None, None)
        size: root.width, root.st.height
        pos_hint: {'x': 1, 'y': 1}
        arrow_pos: 'right_mid'
        orientation: 'horizontal'



    Toggle:
        id: vb
        main_color: 1, 0, 0
        size: 30, 30
        y: root.y + root.height - self.height
        x: root.center_x
        path: ''
        on_press:
            root.state_to_visible()


        

