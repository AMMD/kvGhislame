#!kivy 1.5

<MenuButton>:
    group: 'tabs'
    on_press:
        self.parent.parent.sm.current = self.text
        self.state = 'down'

<MainKvG>:
    sm: sm
    menu: menu
    mix_b: mix_b
    mainmix: mainmix
    odr_b: odr_b
    organicdrums: organicdrums

       
    Menu:
        id: menu
        orientation: 'horizontal'
        size_hint: (1, None)
        pos: root.x, root.y + root.height - self.height
        height: 30

        MenuButton:
            id: mix_b
            text: "Mix"
            on_parent: self.state = 'down'

        MenuButton:
            id: odr_b
            text: "ODr"
      
    ScreenManager:
        id: sm
        size_hint: (None, None)
        height: root.height - menu.height
        width: root.width
        pos: root.pos

        MainMix:
            id: mainmix
            name: 'Mix'

        OrganicDrums:
            id: organicdrums
            name: 'ODr'
            ToggleButton:
                text: "OrganicDrums"
