#!kivy 1.5
<Loop>:
    play: play
    record: record
    trig: trig
    once: once
    twice: twice
    halfth: halfth
    overdub: overdub
    multiply: multiply
    pause: pause
    mute: mute
    reverse: reverse
    dry: dry
    wet: wet
    rate: rate
    undo: undo
    redo: redo
    sync: sync
    play_sync: play_sync

        
    orientation: 'horizontal'
    size_hint: 1, 1

    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        Toggle:
            id: play
            text: 'Play'
            main_color: root.color
            group: 'sl_transport_' + root.name
        Toggle:
            id: record
            text: 'Record'
            main_color: root.color
            group: 'sl_transport_' + root.name

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, 1
        width: root.width * 2 / 3

        GridLayout:
            cols: 4
            rows: 2
            size_hint: 1, 1

            Toggle:
                id: overdub
                text: 'Overdub'
                main_color: root.color
                group: 'sl_overdub_' + root.name
            Toggle:
                id: multiply
                text: 'Multiply'
                main_color: root.color
                group: 'sl_overdub_' + root.name
            Toggle:
                id: reverse
                text: 'Reverse'
                main_color: root.color
            Push:
                id: undo
                text: 'Undo'
                main_color: root.color

            Push:
                id: trig
                text: 'Trig'
                main_color: root.color
                group: 'sl_overdub_' + root.name
            Toggle:
                id: pause
                text: 'Pause'
                main_color: root.color
                group: 'sl_transport_' + root.name
            Toggle:
                id: mute
                text: 'Mute'
                main_color: root.color
            Push:
                id: redo
                text: 'Redo'
                main_color: root.color

        BoxLayout:
            size_hint: 1, 1
            orientation: 'vertical'

            ValueFader:
                id: wet
                name: 'Wet'
                color: root.color
                orientation: 'horizontal'
            ValueFader:
                id: dry
                name: 'Dry'
                color: root.color
                orientation: 'horizontal'

    ValueFader:
        id: rate
        name: 'Rate'
        color: root.color
        orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'
        Toggle:
            id: play_sync
            text: 'Play Sync'
            main_color: root.color
        Toggle:
            id: sync
            text: 'Sync'
            main_color: root.color
        Toggle:
            id: halfth
            text: 'x1/2'
            main_color: root.color
            group: 'sl_rate_' + root.name
        Toggle:
            id: once
            text: 'x1'
            main_color: root.color
            group: 'sl_rate_' + root.name
        Toggle:
            id: twice
            text: 'x2'
            main_color: root.color
            group: 'sl_rate_' + root.name

            
            
