#!kivy 1.5

<MainMix>:
    organicdrums: organicdrums
    basses: basses
    guitares: guitares
    saxophones: saxophones
    vocals: vocals
    mxsynths: mxsynths
    mxdrums: mxdrums
    nycomp: nycomp
    fxs: fxs
    drumloop: drumloop

    mainmix: mainmix

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 1)
        pos_hint: {'x': 0, 'y': 0}

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'Organic Drums'
            AudioStrip:
                id: organicdrums
                name: "Organic Drums"
                color: 1, 0, 1
                size_hint: (1, 1)


        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'Basses'
            AudioStrip:
                id: basses
                name: "Basses"
                color: 1, 1, 0
                size_hint: (1, 1)


        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'Guitares'
            AudioStrip:
                id: guitares
                name: "Guitares"
                color: 0, 0, 1
                size_hint: (1, 1)


        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'Saxophones'
            AudioStrip:
                id: saxophones
                name: "Saxophones"
                color: 0, 1, 0
                size_hint: (1, 1)



        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'Vocals'
            AudioStrip:
                id: vocals
                name: "Vocals"
                color: 1, 1, 1
                size_hint: (1, 1)



        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'MxSynths'
            AudioStrip:
                id: mxsynths
                name: "MxSynths"
                color: 1, 0.5, 0
                size_hint: (1, 1)



        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'MxDrums'
            AudioStrip:
                id: mxdrums
                name: "MxDrums"
                color: 1, 0.5, 0
                size_hint: (1, 1)



        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'Organic Drums'
            AudioStrip:
                id: nycomp
                name: "NY Comp"
                color: 1, 0.5, 1
                size_hint: (1, 1)


        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'FXs'

            AudioStrip:
                id: fxs
                name: "FXs"
                color: 1, 0.5, 0
                size_hint: (1, 1)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 20
                group: 'tabs'
                text: 'SooperLooper'
            AudioStrip:
                id: drumloop
                name: "Drum Loop"
                color: 1, 0.3, 1
                size_hint: (1, 1)
                osc_name: "SooperLooper"

        BoxLayout:
            orientation: 'horizontal'
            spacing: 30
            size_hint: (1, 1)
            AudioStrip:
                id: mainmix
                name: "Main Mix"
                color: 1, 1, 1
                size_hint: (1, 1)
                pos_hint: {'center_x': 0.5}
                canvas.before:
                    Color:
                        rgba: 0.1, 0.1, 0.1, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: 0.7, 0.7, 0.7, 0.5
                    Line:
                        rectangle: self.x, self.y, self.width - 1, self.height - 1

