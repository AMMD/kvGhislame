#:kivy 1.4

<ExtendedXyPad>:
    xfader: xfader
    yfader: yfader

    ibox_padding: yfader.width * 1.5, xfader.height * 1.5


    on_parent:
        self.innerbox.bind(on_touch_move=root.update_cursor_from_pad)
        

    Fader:
        id: xfader
        orientation: 'horizontal'
        color: root.color
        width: root.innerbox.width
        height: 50
        x: root.innerbox.x
        y: root.innerbox.height + root.innerbox.y + 5
        padding: root.innerbox.padding
        on_touch_move:
            root.innerbox.value_pos = (self.value_pos[0], root.innerbox.value_pos[1])

    Fader:
        id: yfader
        orientation: 'vertical'
        color: root.color
        width: 50
        height: root.innerbox.height
        x: root.innerbox.x + root.innerbox.width
        y: root.innerbox.y
        padding: root.innerbox.padding
        on_touch_move:
            root.innerbox.value_pos = (root.innerbox.value_pos[0], self.value_pos[1])


