#:kivy 1.4

<ExtendedXyPad>:
    xfader: xfader
    yfader: yfader

    x_sp_align: 'left'
    y_sp_align: 'bottom'
    subpad: 60, 80

    x_name_pad: 40
    y_name_pad: 40

    Fader:
        id: xfader
        orientation: 'horizontal'
        color: root.color
        padding: 15
        width: root.width - root.subpad[0]
        height: 50
        x: root.x  + root.subpad[0]
        y: 10 + root.faders_subpad[0]
        on_touch_move:
            root.value_pos = (self.value_pos[0], root.value_pos[1])
        step: root.step[0]
        min: root.min[0]
        max: root.max[0]

    Fader:
        id: yfader
        orientation: 'vertical'
        color: root.color
        width: 50
        padding: 15
        subpad: root.subpad[1]
        height: root.height
        x: root.faders_subpad[1]
        pos: root.pos 
        on_touch_move:
            root.value_pos = (root.value_pos[0], self.value_pos[1])
        step: root.step[1]
        min: root.min[1]
        max: root.max[1]

