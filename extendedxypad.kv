#:kivy 1.4

<ExtendedXyPad>:
    xfader: xfader
    yfader: yfader

    x_sp_align: 'left'
    y_sp_align: 'bottom'

 #   on_parent:
 #       self.bind(on_touch_move=root.update_cursor_from_pad)
 #   on_touch_move:
 #       root.update_cursor_from_pad(touch.pos)
    Fader:
        id: xfader
        orientation: 'horizontal'
        color: root.color
        padding: 15
        width: root.width - root.subpad[0]
        height: 50
        x: root.x  + root.subpad[0]
        y: 10 
        on_touch_move:
            root.value_pos = (self.value_pos[0], root.value_pos[1])
        step: root.step[0]

    Fader:
        id: yfader
        orientation: 'vertical'
        color: root.color
        width: 50
        padding: 15
        subpad: root.subpad[1]
        height: root.height
        pos: root.pos 
        on_touch_move:
            root.value_pos = (root.value_pos[0], self.value_pos[1])
        step: root.step[1]

