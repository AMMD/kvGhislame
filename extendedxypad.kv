#:kivy 1.4

<ExtendedXyPad>:
    Fader:
        id: xfader
        orientation: 'horizontal'
        color: root.color
        width: root.innerbox.width
        height: 32
        x: root.innerbox.x
        y: root.y
        padding: root.innerbox.padding
        value_pos: (root.innerbox.value_pos[0], self.value_pos[1])

    Fader:
        id: yfader
        orientation: 'vertical'
        color: root.color
        width: 32
        height: root.innerbox.height
        x: root.width - self.width / 2
        y: root.innerbox.y
        padding: root.innerbox.padding
        value_pos: (self.value_pos[0], root.innerbox.value_pos[1])



