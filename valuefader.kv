#:kivy 1.4


<Fader>:
    orientation: 'vertical'

    Label:
        font_size: 10
        color: 1, 1, 1, 1
        halign: 'left'
        valign: 'middle'
        text_size: 30, 20
        text: str(round(root.value,2))

        center_y: root.value_pos[1]
        center_x: root.center_x+30


<ValueFader>:
    fader: fader
    name_f: name_f

    Label:
        id: name_f
        font_size: 10
        color: 1, 1, 1, 1

        height: self.texture_size[1]
        width: root.width - 2

        y: fader.height + fader.y + 5
        x: root.x + 1

        shorten: 'true'
        text_size: self.width, 15

        halign: 'center'
        valign: 'bottom'

        text: root.name

#        canvas:
#            Color:
#                rgb: 0.2, 0.2, 0.2
#            Line:
#                rectangle: self.x, self.y, self.width, self.height

    Fader:
        id: fader
        height: root.height - 20
        y: root.y
        center_x: root.center_x


