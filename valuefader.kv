#:kivy 1.4


<Fader>:
    canvas:
        Color:
            rgba: self.r, self.g, self.b, 0.3
        Ellipse:
            size: 28, 28
            pos: root.value_pos[0] - 14, self.center_y - 15

    Label:
        font_size: 10
        color: root.r, root.g, root.b, 1
        halign: 'left' if root.orientation == 'vertical' else 'center'
        valign: 'middle' if root.orientation == 'vertical' else 'bottom'
        text_size: 30, 20
        text: str(round(root.value,2))

        center_y: root.value_pos[1] if root.orientation == 'vertical' else root.value_pos[1] + 55
        center_x: root.center_x+30 if root.orientation == 'vertical' else root.value_pos[0]



<ValueFader>:
    name_f: name_f
    fader: fader

    Label:
        id: name_f
        font_size: 10
        color: root.r, root.g, root.b, 1

        height: self.texture_size[1]
        width: root.width - 2

        y: root.y
        x: root.x + 1

        shorten: 'true'
        text_size: self.width, 15

        halign: 'center'
        valign: 'bottom'

        text: root.name

    Fader:
        id: fader

        height: root.height - name_f.height - 10 if self.orientation == 'vertical' else 60
        y: root.y + name_f.height + 10 if self.orientation == 'vertical' else root.y + 11
        x: root.x
        width: root.width
        color: root.color

        max: root.max
        min: root.min
        orientation: root.orientation


