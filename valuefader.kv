#:kivy 1.4


<Fader>:
    orientation: 'vertical'

    Label:
        font_size: 10
        color: 1, 1, 1, 1
        halign: 'left'
        valign: 'middle'
        text_size: 30, 20
        text: str(round(root.value,2))

        center_y: root.value_pos[1]
        center_x: root.center_x+30





<ValueFader>:
#    fader: fader
    name_f: name_f

#    padding: 35

    canvas:
        Color:
            rgba: 0, 0, 0, 0.8
        Rectangle:
            pos: root.x, root.height - 20
            size: root.width, 20
        
    Label:
        id: name_f
        font_size: 10
        color: 1, 1, 1, 1

        height: self.texture_size[1]
        width: root.width - 2

        top: root.top - 20
#        y: root.height + root.y + 5
        x: root.x + 1

        shorten: 'true'
        text_size: self.width, 15

        halign: 'center'
        valign: 'bottom'

        text: root.name


