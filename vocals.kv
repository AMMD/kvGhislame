#!kivy 1.5

<Vocals>:
    vocalsorl: vocalsorl
    vocalssouv: vocalssouv
    vocalsyula: vocalsyula
    vocalsfx: vocalsfx

    vocals: vocals

    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 1)
        pos_hint: {'x': 0, 'y': 0}
        spacing: 5

        AudioStrip:
            id: vocalsorl
            name: "Vocals ORL"
            color: 1, 0.9, 0.9

        AudioStrip:
            id: vocalssouv
            name: "Vocals Souv"
            color: 0.9, 1, 0.9

        AudioStrip:
            id: vocalsyula
            name: "Vocals Yula"
            color: 0.9, 0.9, 1

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            MenuButton:
                size_hint: 1, None
                height: 35
                group: 'tabs'
                text: 'Vocals FX'
                main_color: 0.9, 0.9, 0.9
            AudioStrip:
                id: vocalsfx
                name: "Vocals FX"
                color: 0.9, 0.9, 0.9
                size_hint: (1, 1)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 1)
            spacing: 5
            MenuButton:
                size_hint: 1, None
                height: 50
                group: 'tabs'
                text: 'Main Mix'
                main_color: 1, 1, 1
            AudioStrip:
                id: vocals
                name: "Vocals"
                color: 1, 1, 1
                size_hint: (1, 1)
                canvas.before:
                    Color:
                        rgba: 0.1, 0.1, 0.1, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                    Color:
                        rgba: 0.7, 0.7, 0.7, 0.5
                    Line:
                        rectangle: self.x, self.y, self.width - 1, self.height - 1
