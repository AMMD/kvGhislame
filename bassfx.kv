        BoxLayout:
            id: vcf
            orientation: 'horizontal'
            size_hint: 1, 1
            VCF:
                size_hint: 1, 1
                color: 1, 1, 0
            BoxLayout:
                orientation: 'vertical'
                size_hint: None, 1
                width: 60
                spacing: 10
                ValueFader:
                    size_hint: 1, 1
                    orientation: 'vertical'
                    color: 1, 1, 0
                    name: 'LFO'
                ValueFader:
                    size_hint: 1, 1
                    orientation: 'vertical'
                    color: 1, 1, 0
                    name: 'Level'
                Toggle:
                    size_hint: 1, None
                    height: 30
                    main_color: 1, 1, 0
                    text: 'M'

        BoxLayout:
            orientation: 'horizontal'
            AudioStrip:
                name: 'Chorus'
                color: 1, 0, 0
            AudioStrip:
