#!kivy 1.5

<LightBox>:
    main_dimmer_fader: main_dimmer_fader

    xypad: xypad

    pad_pos: xypad.pad_pos
    pad_size: xypad.pad_size

    r_fader: r_fader
    g_fader: g_fader
    b_fader: b_fader

    custom_color_1: cc1
    custom_color_2: cc2
    custom_color_3: cc3
    custom_color_4: cc4
    custom_color_5: cc5
    custom_color_6: cc6
    custom_color_7: cc7
    custom_color_8: cc8

    flash: flash

    args_pattern: "fff"
    path: "/" + self.app_name.replace(" ", "_") + "/LightXYpad/" +  self.name.replace(" ", "_") + "/" + str(self.mode)
    control_path: self.path

    spacing: 10

    GridLayout:
#        orientation: 'vertical'
#        size_hint: None, 1
#        x: root.x
        cols: 2
        rows: 2
        spacing: 5

#        BoxLayout:
#            orientation: 'horizontal'
#            size_hint: 1, 1
#            spacing: 5


        BoxLayout:
            orientation: 'vertical'
            size_hint: None, 1
            pos_hint: {'y': 0.1}
            width: 30
            spacing: 10 

            Push:
                id: cc1
                main_color: 1, 0, 0
                size_hint: (None, None)
                size: 30, 30
                path: ''
                on_press:
                    root.rgb = self.main_color
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], 0

            Push:
                id: cc2
                main_color: 1, 1, 0
                size_hint: (None, None)
                size: 30, 30
                path: ''
                on_press:
                    root.rgb = self.main_color
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], 0

            Push:
                id: cc3
                main_color: 1, 1, 1
                size_hint: (None, None)
                size: 30, 30
                path: ''
                on_press:
                    root.rgb = self.main_color
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], 0

            Push:
                id: cc4
                main_color: 1, 0, 1
                size_hint: (None, None)
                size: 30, 30
                path: ''
                on_press:
                    root.rgb = self.main_color
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], 0

            Push:
                id: cc5
                main_color: 0, 1, 1
                size_hint: (None, None)
                size: 30, 30
                path: ''
                on_press:
                    root.rgb = self.main_color
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], 0

            Push:
                id: cc6
                main_color: 0, 1, 0
                size_hint: (None, None)
                size: 30, 30
                path: ''
                on_press:
                    root.rgb = self.main_color
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], 0

            Push:
                id: cc7
                main_color: 0, 0, 1
                size_hint: (None, None)
                size: 30, 30
                path: ''
                on_press:
                    root.rgb = self.main_color
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], 0

            Push:
                id: cc8
                main_color: 1, 0.5, 1
                size_hint: (None, None)
                size: 30, 30
                path: ''
                on_press:
                    root.rgb = self.main_color
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], 0
    

        ValueFader:
            id: main_dimmer_fader
            size_hint: 1, 1
#        width: 60
            orientation: 'vertical'
            name: root.name
            color: root.color
            max: 1
            value: root.xypad.hsv[2]
            path: ''
            on_touch_move:
                root.xypad.value = (root.xypad.value[0], self.value)

        # BoxLayout:
        #     orientation: 'horizontal'
        #     size_hint: 1, None
        #     height: 30
        #     spacing: 5
        Push:
            size_hint: (None, None)
            hsv: 1, 1, 1
            size: 34, 34
            text: 'link'
        FloatLayout:
            size_hint: 1, None
            height: 34
            Push:
                id: flash
                hsv: root.xypad.hsv[0], root.xypad.hsv[1], 1
                size_hint: (None, None)
                size: 34, 34
                center_x: main_dimmer_fader.center_x
                text: 'flash'
#            x: main_dimmer_fader.x + 5
                path: ''
                on_press:
                    root.old_hue = root.xypad.hsv[2]
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], 1
                on_release:
                    root.xypad.hsv = root.xypad.hsv[0], root.xypad.hsv[1], root.old_hue




    LightXyPad:
        id: xypad
        name: root.name
        size_hint: None, 1
        width: 2 * root.width / 3

    ValueFader:
        id: r_fader
        size_hint: 1, 1
        orientation: 'vertical'
        color: 1, 0, 0
        name: 'red'
#        width: 50
        max: 1
        value: root.xypad.rgb[0]
        path: ''
        on_touch_move:
            root.xypad.rgb = self.value, root.xypad.rgb[1], root.xypad.rgb[2]

    ValueFader:
        id: g_fader
        size_hint: 1, 1
        orientation: 'vertical'
        color: 0, 1, 0
        name: 'green'
#        width: 50
        max: 1
        value: root.xypad.rgb[1]
        path: ''
        on_touch_move:
            root.xypad.rgb = root.xypad.rgb[0], self.value, root.xypad.rgb[2]


    ValueFader:
        id: b_fader
        size_hint: 1, 1
        orientation: 'vertical'
        color: 0, 0, 1
        name: 'blue'
#        width: 50
        max: 1
        value: root.xypad.rgb[2]
        path: ''
        on_touch_move:
            root.xypad.rgb = root.xypad.rgb[0], root.xypad.rgb[1], self.value





    
